{% extends 'base.html.twig' %}

{% block title %}Ma Commande
{% endblock %}

{% block content %}

	<h2 class="mt-3">Confirmation de commande</h2>

	<p>Votre commande n°
		{{order.reference}}</p><br><br>

	<p>La confirmation de votre commande a été envoyé à l'adresse email :
		{{app.user.email}}</p>
	<p>La commande sera livrée par :
		{{order.carrier.name}}</p>
	<p>A l'adresse suivante :
		{{order.delivery | replace({'[br]':'<br>'}) | raw}}</p>

{% endblock %}
