{%  extends 'base.html.twig' %}

{% block content %}

	<h1 class="mt-3">Poster un commentaire sur le produit</h1>

	{% if product.isProductFromUser(app.user) %}

		<h2>Votre avis compte</h2>

		{% if product.getCommentFromUser(app.user) is null %}

			{{form(form)}}

				{% else %}

					<h4 class="alert-danger col-m6">Vous avez déja posté un commentaire ici !
					</h4>

			{% endif %}

		{% else %}
			<h4 class="alert-danger col-m6">Vous n'avez pas acheté l'article
			</h4>
		{% endif %}
	{% endblock %}
